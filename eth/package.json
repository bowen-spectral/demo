{
  "name": "eth",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@opengsn/contracts": "^2.2.2",
    "@opengsn/dev": "^2.2.2",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "chai": "^4.2.0",
    "chai-ethers": "^0.0.1",
    "cosmiconfig": "^7.0.0",
    "dotenv": "^9.0.2",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.1.0",
    "hardhat": "^2.1.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.7.4",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.8",
    "snarkjs": "https://github.com/iden3/snarkjs.git",
    "solhint": "^3.0.0",
    "ts-dedent": "^2.0.0",
    "ts-generator": "^0.1.1",
    "ts-node": "^8.10.2",
    "typechain": "^4.0.1",
    "typescript": "^3.9.7",
    "yup": "^0.32.9"
  },
  "engines": {
    "node": ">=14 <16"
  },
  "dependencies": {},
  "scripts": {
    "prepare": "yarn run compile",
    "test": "hardhat test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "deploy-xdai": "hardhat deploy --network xdai --gasprice 1000000000",
    "deploy-localhost": "yarn hardhat deploy --network localhost",
    "deploy-paymaster-xdai": "hardhat --network xdai paymaster:deploy --show-stack-traces",
    "setup-paymaster-xdai": "hardhat --network xdai paymaster:setup --show-stack-traces",
    "whitelist-diamond-on-paymaster-xdai": "hardhat --network xdai paymaster:whitelist --show-stack-traces",
    "set-forwarder-xdai": "npx hardhat --network xdai config:set-trusted-forwarder --show-stack-traces",
    "fund-paymaster-xdai": "hardhat --network xdai paymaster:fund --show-stack-traces",
    "fund-bank-xdai": "npx hardhat --network xdai bank:fund --show-stack-traces",
    "get-bank-funds-xdai": "npx hardhat --network xdai bank:get-funds --show-stack-traces",
    "setup-xdai": "run-s whitelist-diamond-on-paymaster-xdai set-forwarder-xdai fund-bank-xdai",
    "hardhat:node": "hardhat node --hostname 0.0.0.0",
    "hardhat:dev": "hardhat --network localhost",
    "compile": "hardhat compile",
    "size": "hardhat size-contracts",
    "export": "hardhat export --network localhost --export '../client/public/contracts.json' && (rm -r ../client/src/typechain || true) && cp -r typechain ../client/src/typechain",
    "export-xdai": "hardhat export --network xdai --export '../client/public/contracts.json' && (rm -r ../client/src/typechain || true) && cp -r typechain ../client/src/typechain",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "deploy-and-setup-paymaster-local": "npx hardhat --network localhost paymaster:deploy --show-stack-traces && npx hardhat --network localhost paymaster:setup --show-stack-traces && npx hardhat --network localhost paymaster:whitelist --show-stack-traces && npx hardhat --network localhost paymaster:fund --show-stack-traces",
    "set-forwarder-local": "npx hardhat --network localhost config:set-trusted-forwarder --show-stack-traces",
    "get-config-local": "npx hardhat --network localhost config:get-local --show-stack-traces",
    "set-config-local": "npx hardhat --network localhost config:set --show-stack-traces",
    "set-config-xdai": "npx hardhat --network xdai config:set --show-stack-traces",
    "set-paused-local": "npx hardhat --network localhost config:set-paused",
    "set-paused-xdai": "npx hardhat --network xdai config:set-paused"
  }
}
